{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"playwright": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "@playwright/mcp@latest"]
		},
		"mcp-server-firecrawl": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "-y", "firecrawl-mcp"],
			"environment": {
				"FIRECRAWL_API_KEY": "placeholder"
			}
		},
		"serena": {
			"type": "local",
			"enabled": true,
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena-mcp-server",
				"--context",
				"agent"
			]
		},
		"context7": {
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp"],
			"enabled": true
		},
		"grep": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		},
		"ultracite": {
			"type": "local",
			"enabled": true,
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://www.ultracite.ai/api/mcp/mcp"
			]
		},
		"github": {
			"type": "local",
			"enabled": true,
			"command": ["npx", "-y", "@modelcontextprotocol/server-github"],
			"environment": {
				"GITHUB_PERSONAL_ACCESS_TOKEN": "placeholder"
			}
		}
	}
}
