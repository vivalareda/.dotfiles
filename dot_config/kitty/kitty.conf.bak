# BEGIN_KITTY_FONTS
font_family      family='JetBrains Mono' postscript_name=JetBrainsMono-Light
bold_font        family='JetBrains Mono' style=Light
italic_font      family='JetBrains Mono' postscript_name=JetBrainsMono-LightItalic
bold_italic_font auto
# END_KITTY_FONTS

cursor_shape block
cursor_shape_unfocused unchanged
font_size 18.0
cursor_blink_interval 0
shell_integration no-cursor
hide_window_decorations title-bar
window_border_width 0
draw_minimal_borders yes
background_opacity 0.90

include ./theme.conf
